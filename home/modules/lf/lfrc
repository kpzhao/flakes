# dedicated keys for file opener actions
map o &mimeopen $f
map O $mimeopen --ask $f

map zfz $lf -remote "send $id select \"$(fzf)\""
# custom f to fzf search directory
map zff $lf -remote "send $id select \"$(find -type d 2>/dev/null | fzf)\""
map zfd $lf -remote "send $id cd $(sed -e 's/\s*#.*//' -e '/^$/d' -e 's/^\S*\s*//' ${XDG_CONFIG_HOME:-$HOME/.config}/shell/bm-dirs | fzf)"
map zfc :fzf_search

